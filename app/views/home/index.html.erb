<% provide(:title, "Home") %>
<div class="center jumbotron">
  <h1 style="font-size: 400%;">Welcome to the Firm Management System</h1>
<br>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="message_form">
        <%= render 'shared/message_form' %>
      </section>
    </aside>
  </div>
<% end %>


<% if logged_in? %>
	<h3>Welcome,   [User Name Here]</h3>
	<br>
	<p>
	<%= link_to "Case Files", case_files_path, class: "btn" %>
    <%= link_to "Phone Messages", messages_path, class: "btn" %>
    </p>
 <% else %>
   <h2>
    This the homepage for the Firm Management System application.  Authorized users can gain access by clicking the button below.
  </h2>
  <li><%= link_to "Log in", login_path %></li>
<% end %>
</div>